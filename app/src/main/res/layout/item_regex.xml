<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical" android:padding="12dp">

    <TextView
        android:id="@+id/rxTitle"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:textStyle="bold" android:textSize="16sp"/>

    <TextView
        android:id="@+id/rxPattern"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:textIsSelectable="true" android:paddingTop="4dp" android:textSize="14sp"/>

    <TextView
        android:id="@+id/rxExample"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:textIsSelectable="true" android:paddingTop="2dp" android:textSize="13sp"/>

    <Button
        android:id="@+id/rxCopy"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Kopieren" android:layout_marginTop="6dp"/>
</LinearLayout>

